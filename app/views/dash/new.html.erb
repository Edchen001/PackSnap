<form class="pure-form pure-form-aligned">
    <%= form_tag("/dash", method: :post, multipart: true) do %>
    <%= hidden_field_tag "location[latitude]", params[:location][:latitude] %>
    <%= hidden_field_tag "location[longitude]", params[:location][:longitude] %>
    <%= hidden_field_tag "location[address]", params[:location][:address] %>
    <%= hidden_field_tag "item[user_id]", session[:user_id] %>
    <fieldset>
        <div class="pure-control-group">
    <%= label_tag "Item Name" %>
    <%= text_field_tag "item[name]" %>
    </div>
    <div class="pure-control-group">
    <%= label_tag "Upload an image" %>
    <%= file_field_tag "item[image]" %>
    </div>
    <div class="pure-control-group">
    <%= label_tag "Comment" %>
    <%= text_area_tag "comment[content]" %>
    </div>
    <div class="pure-controls">
    <%= submit_tag "Submit" %>
    </div>
    <% end %>
    </fieldset>
</form>