<section class="grid-wrap">
  <ul class="grid">
    <li class="grid-sizer"></li>
    <% @location.comments.each do |comment| %>
    <li>
      <figure>
        <%= image_tag comment.item.image.url(:medium) %>
        <figcaption>
          <p><%= comment.user.username %>: </p>
          <p><%= comment.item.name %></p>
          <p><%= comment.content %></p>
          <p><%= @location.address %></p>
        </figcaption>
      </figure>
    </li>
    <% end %>
  </ul>
</section>
