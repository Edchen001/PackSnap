<div class="trip-single">
  <p>TRIP INFO</p>
  <p>Title: <%= trip.title %></p>
  <p>Description: <%= trip.description %></p>
  <% trip.itineraries.each do |itinerary| %>
    <div class="location-display">
      <%= itinerary.location.name %>
    </div>
  <% end %>
  <li> <%= link_to "Edit trip", edit_trip_path(trip.id)  %></li>
	<li> <%= link_to "delete trip", trip_path(trip.id), method: :delete  %></li>
  <li><%= link_to "New Itinerary", new_trip_itinerary_path(trip) %></li>
</div>